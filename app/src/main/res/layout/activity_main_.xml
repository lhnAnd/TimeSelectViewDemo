<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/demo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="demo"/>
        <Button
            android:id="@+id/demo_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login"/>
        <Button
            android:id="@+id/demo_button_event_bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/demo_button_event_bus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login"/>
        <Button
            android:id="@+id/demo_button_kt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tokt"/>
    </LinearLayout>

    <com.example.downloaddemo.view.TwoDemoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.example.downloaddemo.DemoTimeLineView
        android:id="@+id/demo_time_line"
        android:layout_width="match_parent"
        android:layout_height="155dp"/>
</LinearLayout>